.outer

  = render 'shared/side_bar'

  .main
    .header
      .left-header

        .left-header__title
          = @group.name

        %ul.left-header__members
          MEMBERS :
          - @group.users.each do |user|
            %li.member
              = user.name

      .right-header
        %a.right-header__button{href: 'edit'} Edit


    .contents 
      = render @messages 

    .footer
      = form_for [@group, @message] do |f|

        = f.text_field :content, class: 'footer__message', placeholder: 'type a message'

        .footer__cell
          = f.label :image, class: 'footer__cell__image' do
            %i.fa.fa-image
              = f.file_field :image, class: 'hidden'

        = f.submit "Send", class: 'footer__submit'

